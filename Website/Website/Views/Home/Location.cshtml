@{
    ViewData["Title"] = "Clearview";
}

@section head {
    <link rel="Stylesheet" href="@Href("~/css/locationPage.css")" />
}


@*banner*@

<section class="location-banner">
    <label class=" location-banner-name">Clearview</label>
</section>

@*BIO*@
<section class="bio">
<p>Check us out for the weed, come back for the knowledgeable and friendly staff.  At the Kushery we are able to maintain quality affordable marijuana due to the experience gained as former medical marijuana providers.  Through this experience, we fine tune each individual customer’s wants and needs.  In addition to making informed and selective buying decisions on product.
The Kushery prides itself on providing the best quality products at the best price.  So, come round and see for yourself, we’re certain you won’t leave empty handed. </p>
</section>

@*map*@

<section class="map">
    <iframe frameborder="0" style="border: 0" src="https://www.google.com/maps/embed/v1/place?q=47.8764648,-122.1564188&amp;key=AIzaSyDK08tC4NRubbIiw-xwDR1WEp-YAXX1Mx8" allowfullscreen=""></iframe>
</section>

@*location hours*@

<section class="information">
    <section>
        <p>
            The Kushery: Snohomish
            18026 State Route 9, STE B
            Snohomish, WA. 98296
            360-863-3256
        </p>
    </section>

    <h2>Hours</h2>
    <table>
        <tbody>
            <tr>
                <td class="spacer-vertical-xxs spacer-right-xs"><b>Sunday</b></td>
                <td class="spacer-vertical-xxs spacer-horizontal-xs">10:00 AM - 8:00 PM</td>

            </tr>
            <tr>
                <td class="spacer-vertical-xxs spacer-right-xs"><b>Monday</b></td>
                <td class="spacer-vertical-xxs spacer-horizontal-xs">10:00 AM - 8:00 PM</td>

                <td class="spacer-vertical-xxs spacer-left-xs" style="color: green">Open Now</td>
            </tr>
            <tr>
                <td class="spacer-vertical-xxs spacer-right-xs"><b>Tuesday</b></td>
                <td class="spacer-vertical-xxs spacer-horizontal-xs">10:00 AM - 8:00 PM</td>

            </tr>
            <tr>
                <td class="spacer-vertical-xxs spacer-right-xs"><b>Wednesday</b></td>
                <td class="spacer-vertical-xxs spacer-horizontal-xs">10:00 AM - 8:00 PM</td>

            </tr>
            <tr>
                <td class="spacer-vertical-xxs spacer-right-xs"><b>Thursday</b></td>
                <td class="spacer-vertical-xxs spacer-horizontal-xs">10:00 AM - 8:00 PM</td>

            </tr>
            <tr>
                <td class="spacer-vertical-xxs spacer-right-xs"><b>Friday</b></td>
                <td class="spacer-vertical-xxs spacer-horizontal-xs">10:00 AM - 8:00 PM</td>

            </tr>
            <tr>
                <td class="spacer-vertical-xxs spacer-right-xs"><b>Saturday</b></td>
                <td class="spacer-vertical-xxs spacer-horizontal-xs">10:00 AM - 8:00 PM</td>

            </tr>
        </tbody>
    </table>

    @*employee carousel*@

    <div class="employee-carousel">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/images/logo1.jpg" alt="ASP.NET" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Learn how to build ASP.NET apps that can run anywhere.
                            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/logo2.jpg" alt="Visual Studio" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            There are powerful new features in Visual Studio for building modern web apps.
                            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/logo3.jpg" alt="Package Management" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Bring in libraries from NuGet, Bower, and npm, and automate tasks using Grunt or Gulp.
                            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/logo4.jpg" alt="Microsoft Azure" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                                Learn More
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
       </div>
</section>
                  